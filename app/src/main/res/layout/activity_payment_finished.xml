<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/img_smile"
            android:src="@drawable/ic_smile" />

        <TextView
            android:id="@+id/txt_titulo_obrigado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_smile"
            android:layout_centerHorizontal="true"

            android:gravity="center"
            android:text="Obrigado!"
            android:textColor="@color/red_compreingressos"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_titulo_obrigado"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Compra efetuada com sucesso."
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="Basta apresentar seus ingressos\n na entrada do evento."
            android:textSize="18sp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_ver_ingressos"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@color/red_compreingressos"
            android:text="Ver Ingressos"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/toolbar_title"
            android:layout_width="@dimen/cast_intro_overlay_title_margin_top"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo_toolbar" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Seus ingressos estão disponiveis \n em 'Meus Ingressos' na tela \n inicial e também por e-mail."
            android:textSize="18sp"
            android:layout_above="@+id/img_atencao"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="13dp" />

        <ImageView
            android:id="@+id/img_atencao"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/ic_atencao"
            android:layout_above="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(Verifique sua caixa de spam, Tira-Teima\n do UOL e demais bloqueadores)"
            android:textSize="12sp"
            android:layout_above="@+id/toolbar_title"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>


</RelativeLayout>